rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to staff collection for development
    match /staff/{document} {
      allow read, write: if true;
    }
    
    // Allow public read/write access to all other collections for development
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
