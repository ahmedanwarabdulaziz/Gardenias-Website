rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read images
    match /staff-pictures/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and read any files
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
